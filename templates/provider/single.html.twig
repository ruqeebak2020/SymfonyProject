{% extends 'layout.html.twig' %}

{% block title %}
{{ project_name }} | {{ page_title }} | {{ provider.owner }} - {{ provider.name }}
{% endblock %}

{% block content %}
<br/><br/><br/><br/>
<div class="container single_provider">

    <div class="row">

      <div class="col-lg-12">

        <h4 class="card-title">
            <h2><a href="#">{{ provider.owner }}</a> <span class="provider_name">- {{ provider.name }}</span> </h2>
        </h4>

        <p class="card-text">{{ provider.description }}</p>

        <div class="row product_list">

          {% for product in products %}
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a href="{{ url('product') }}/{{ product.id }}" class="pro_img"><img class="card-img-top"  src="{{ absolute_url(asset('images/product/' ~ product.image)) }}" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="{{ url('product') }}/{{ product.id }}">{{ product.name }}</a>
                  </h4>
                  {% set price = product.getSoftware()|last.price %}
                  <h5>$ {{price}}</h5>
                  <!-- <h5>$ 24.5 {# product.price #}</h5> -->
                  <p class="card-text">{{ product.description }}</p>
                </div>
                <div class="card-footer">
                  <!-- <small class="text-muted">★ ★ ★ ★ ☆</small> -->
                  <a href="{{ url('product') }}/{{ product.id }}"><button class="btn btn-primary">View More </button></a>
                  <button class="btn btn-primary btn-cart">Add To Cart </button>
                </div>
              </div>
            </div>
          {% endfor %}

        </div>
        <!-- /.row -->


      </div>
      <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

  </div>

    {% block page_contents %}{% endblock %}
{% endblock %}
