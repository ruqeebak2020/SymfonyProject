{% extends 'layout.html.twig' %}

{% block title %}
{{ project_name }} | {{ page_title }} | {{ provider.name }}
{% endblock %}

{% block content %}
<br/><br/><br/><br/>

<input type="hidden" name="app_currency_key" id="app_currency_key" value="{{ api_key }}">

<div class="container single_provider">

    <div class="row">

      <div class="col-lg-12">

        <h4 class="card-title">
            <h2><a href="#">{{ provider.name }}</a> </h2>
        </h4>

        <p class="card-text">{{ provider.description }}</p>

        <p class="card-owner"> <b>Platforms: </b>
        {% for platform in provider.getPlatforms() %}
          {{ platform.name }},
        {% endfor %}
        </p>

        <div class="row product_list">

          {% for product in products %}
            <div class="col-lg-4 col-md-6 mb-4">
                {{ include('bundle/loop.html.twig') }}
            </div>
          {% endfor %}

        </div>
        <!-- /.row -->


      </div>
      <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

  </div>

    {% block page_contents %}{% endblock %}
{% endblock %}
